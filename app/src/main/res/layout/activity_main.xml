<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ads.demo.MainActivity">

        <RelativeLayout
            android:id="@+id/ll_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/showInter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show inters Ads"
                />
        </RelativeLayout>

        <com.ads.yeknomadmob.ads_components.ads_banner.YNMBannerAdView
            android:id="@+id/bannerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:refresh_interval="10000"
            app:show_time="5000" />

        <com.ads.yeknomadmob.ads_components.ads_banner.YNMBannerCollapse
            android:id="@+id/collapse_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:refresh_interval="10000"
            app:show_time="5000" />
    </RelativeLayout>
</layout>