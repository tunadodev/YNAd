<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFAF8">

    <ProgressBar
        android:id="@+id/interstoragePregressfive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/gntBlue"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/loading_dialog_tv"
        android:alpha="0.7"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interstoragePregressfive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/loading_ads"
        android:textSize="@dimen/_13sdp" />
</RelativeLayout>